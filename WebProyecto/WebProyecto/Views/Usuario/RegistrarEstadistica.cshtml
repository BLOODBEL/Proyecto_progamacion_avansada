@model WebProyecto.Entities.UsuarioEnt

@{
    ViewBag.Title = "RegistrarEstadistica";
    Layout = "~/Views/Shared/_layout_Login.cshtml";
}
<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -100px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg');">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1>Registrar Estadistica</h1>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="section d-flex align-items-center justify-content-center">
</section>

<section class="section element-animate">
    <div class="container-fluid">
        <div class="col-md-12 text-center heading-wrap">
            <div class="container">
                <div class="form-wrap overlap primary element-animate">

                    @if (ViewBag.MensajeUsuario != null)
                    {
                        <div class="alert alert-danger" role="alert" style="text-align:center">
                            @ViewBag.MensajeUsuario
                        </div>
                    }
                    @using (Html.BeginForm("RegistrarEstadistica", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Altura, new { @class = "form-control form-control-lg", @placeholder = "Altura", @type = "text" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Peso, new { @class = "form-control form-control-lg", @placeholder = "Peso", @type = "text" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Fecha, DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control form-control-lg", @placeholder = "Fecha", @type = "date" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.IdUsuario, new { @class = "form-control form-control-lg", @placeholder = "Apellidos 2", @type = "text" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-warning btn-block py-3" value="REGISTRAR ESTADÍSTICA">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>