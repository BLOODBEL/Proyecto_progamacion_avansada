@model IEnumerable<WebProyecto.Entities.UsuarioEnt>

@{
    ViewBag.Title = "ConsultaUsuarios";
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -50px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg'); background-size: cover; background-position: center center;">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1> Información de Usuarios</h1>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="section element-animate">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Identificación</th>
                            <th>Nombre</th>
                            <th>Primer Apellido</th>
                            <th>Segundo Apellido</th>
                            <th>Correo Electrónico</th>
                            <th>Telefono</th>
                           
                            <th>Estado</th>
                            <th>Ver Estadisticas</th>
                            <th>Cambiar Estado</th>
                            <th>Actualizar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Identificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellidos1</td>
                                <td>@item.Apellidos2</td>
                                <td>@item.CorreoElectronico</td>
                                <td>@item.Telefono</td>
                            

                                @if (item.Estado)
                                {
                                    <td>Activo</td>
                                }
                                else
                                {
                                    <td>Inactivo</td>
                                }

                                <td style="text-align:center">
                                    <a href="@Url.Action("VerEstadistica","Usuario", new { q = item.IdUsuario })"><i class="fa fa-bar-chart"></i></a>
                                </td>

                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarEstadoUsuario","Usuario", new { q = item.IdUsuario })"><i class="fa fa-exchange fa-lg"></i></a>
                                </td>

                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarUsuario","Usuario", new { q = item.IdUsuario })"><i class="fa fa-user fa-lg"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>