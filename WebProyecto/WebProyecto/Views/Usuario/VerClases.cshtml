@model WebProyecto.Entities.ClaseEnt

@{
    ViewBag.Title = "VerClase";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<section class="home-slider-loop-false inner-page owl-carousel" style="margin-bottom: -50px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg'); background-size: cover; background-position: center center;">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1> Información de la Clase </h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section element-animate">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                @if (ViewBag.MensajeClase != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align:center">
                        @ViewBag.MensajeClase
                    </div>
                }

                @using (Html.BeginForm("ActualizarClase", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @Html.HiddenFor(m => m.IdClase)

                    <div class="form-group">
                        <label for="exampleInputPassword4">Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", @placeholder = "Nombre", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Descripción</label>
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control form-control-lg", @placeholder = "Descripción", @type = "text" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Editar</button>
                }
            </div>
        </div>
    </div>
</section>
<script src="~/FuncionesSite/ConsultaNombres.js"></script>


