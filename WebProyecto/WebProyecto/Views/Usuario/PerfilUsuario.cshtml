@model WebProyecto.Entities.UsuarioEnt
@{
    ViewBag.Title = "PerfilUsuario";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -50px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg'); background-size: cover; background-position: center center;">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1> Perfil Personal </h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section element-animate">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("ActualizarUsuario", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @Html.HiddenFor(m => m.IdUsuario)

                    <div class="form-group">
                        <label for="exampleInputName1">Identificación</label>
                        @Html.TextBoxFor(m => m.Identificacion, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Identificación",
                       @type = "text",
                       onkeyup = "ConsultarNombre();"
                   })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @readOnly = "readOnly", @style = "background-color:#eeeeee", @class = "form-control form-control-lg", @placeholder = "Nombre", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.Apellidos1, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.Apellidos2, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "email" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control form-control-lg", @placeholder = "Telefono", @type = "text" })
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Editar</button>

                    <div class="col-md-12 text-center heading-wrap">

                        <a href="@Url.Action("CerrarSesion", "Login")" class="btn btn-primary mr-2">Cerrar Sesión</a>

                    </div>
                }
            </div>
        </div>
    </div>
</section>
<script src="~/FuncionesSite/ConsultaNombres.js"></script>

