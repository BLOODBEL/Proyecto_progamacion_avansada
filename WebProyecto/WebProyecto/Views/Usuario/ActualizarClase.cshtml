
@model WebProyecto.Entities.ClaseEnt
@{
    ViewBag.Title = "ActualizarClase";
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -50px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg'); background-size: cover; background-position: center center;">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1> Actualizar de Rol</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section element-animate">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("ActualizarClase", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @Html.HiddenFor(m => m.IdClase)


                    <div class="form-group">
                        <label for="exampleInputEmail3">Descripcion</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @style = "background-color:#eeeeee", @class = "form-control form-control-lg", @placeholder = "Descripcion", @type = "text" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Descripcion</label>
                        @Html.TextBoxFor(m => m.Descripcion, new { @style = "background-color:#eeeeee", @class = "form-control form-control-lg", @placeholder = "Descripcion", @type = "text" })
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Procesar</button>
                }
            </div>
        </div>
    </div>
</section>