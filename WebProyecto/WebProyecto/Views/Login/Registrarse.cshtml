@model WebProyecto.Entities.UsuarioEnt


@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_layout_Login.cshtml";
}
<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -100px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg');">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1>Registrarse </h1>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="section d-flex align-items-center justify-content-center">
</section>

<section class="section element-animate">
    <div class="container-fluid">
        <div class="col-md-12 text-center heading-wrap">
            <div class="container">
                <div class="form-wrap overlap primary element-animate">
                    <h2 class="h2">Conviértete en miembro</h2>
                 

                        @if (ViewBag.MensajeUsuario != null)
                        {
                            <div class="alert alert-danger" role="alert" style="text-align:center">
                                @ViewBag.MensajeUsuario
                            </div>
                        }
                        @using (Html.BeginForm("Registrarse", "Login", FormMethod.Post, new { @class = "pt-3" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control form-control-lg",@placeholder = "Identificación", @type = "text"})
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", @placeholder = "Nombre", @type = "text" })
                            </div>
                            
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "email" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control form-control-lg", @placeholder = "Contraseña", @type = "password" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control form-control-lg", @placeholder = "Teléfono", @type = "text" })
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-warning btn-block py-3" value="REGISTRARSE">
                            </div>

                            <div class="form-group">
                                ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Login")" class="btn btn-warning btn-block py-3">Iniciar Sesión</a>
                            </div>

                        }
                   
                </div>
            </div>
        </div>
    </div>
</section>

















