@model WebProyecto.Entities.UsuarioEnt


@{
    ViewBag.Title = "contraseña";
    Layout = "~/Views/Shared/_layout_Login.cshtml";
}
<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -100px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg');">

        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1>Recupera tu contraseña </h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section d-flex align-items-center justify-content-center">
</section>




    @if (ViewBag.MensajeUsuario != null)
    {
        <div class="alert alert-danger" role="alert" style="text-align:center">
            @ViewBag.MensajeUsuario
        </div>
    }


    @using (Html.BeginForm("RecuperarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control form-control-lg", @placeholder = "Identificacion", @type = "text" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-warning btn-block py-3" value="Recuperar Cuenta">
        </div>

        <div class="col-md-12 text-center heading-wrap">


            <br />
            ¿No tienes una cuenta? <a href="@Url.Action("Registrarse", "Login")" class="btn btn-warning btn-block py-3">Registrarse</a>


        </div>
    }

