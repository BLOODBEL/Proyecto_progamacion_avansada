
@model IEnumerable<WebProyecto.Entities.SalarioEnt>

@{
    ViewBag.Title = "ConsultaSalario";
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<section class="home-slider-loop-false  inner-page owl-carousel" style="margin-bottom: -50px;">
    <div class="slider-item" style="background-image: url('../../template/img/slider-1.jpg'); background-size: cover; background-position: center center;">
        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 element-animate">
                    <h1> Información de Salario</h1>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="section element-animate">
    <div class="col-md-12 text-center heading-wrap">

        <a href="@Url.Action("RegistrarSalario", "Salario")" class="btn btn-warning btn-block py-3">Registrar Salario</a>

    </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Salario</th>
                            <th>descripcion</th>
                            <th>Id del Usuario</th>
                            <th>Actualizar</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Salario</td>
                                <td>@item.Descripcion</td>
                                <td>@item.IdSalario</td>



                                <td style="text-align:center">
                                    <a href="@Url.Action("ActualizarSalario","Salario", new { q = item.IdSalario })"><i class="fa fa-bar-chart"></i></a>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>