@model IEnumerable<WebProyecto.Entities.InscritoEnt>

@{
    ViewBag.Title = "Inscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información del Carrito</h4>
            <br>

            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }

            @if (Model.Count() > 0)
            {

                <table id="tableShow" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID de la clase</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdClase</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
                    No se ha inscrito en ninguna clase por el momento.
                </div>
            }

        </div>
    </div>
</div>


